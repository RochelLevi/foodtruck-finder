<h1>Your Review Helps Others!</h1>

<%= form_tag controller: "reviews", action: "create", method: "post" do %>

<div>
  <%= label_tag :title %><br>
  <%= text_field_tag :title %><br>
  <br>
</div>

<div>
  <%= label_tag :content %><br>
  <%= text_area_tag :content %><br>
  <br>
</div>

<div>
  <%= label_tag :rating %><br>
  <%= radio_button_tag :rating, 1 %>
  <%= radio_button_tag :rating, 2 %>
  <%= radio_button_tag :rating, 3 %>
  <%= radio_button_tag :rating, 4 %>
  <%= radio_button_tag :rating, 5 %>
</div>

<%= submit_tag 'Post Review' %>

<% end %>
